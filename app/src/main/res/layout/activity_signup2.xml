<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/nav_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="@string/welcome"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/jetbrainsmono"
            android:textColor="@color/primary_text_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:textSize="18sp"
            android:text="@string/access_all_the_pdf_pptx_notes_by_just_creating_an_account"
            android:fontFamily="@font/seg_ui_semibold"
            android:textColor="@color/primary_text_light"/>
    </RelativeLayout>

    <RelativeLayout
        android:elevation="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/card_background"
        >
        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_light"
            android:textSize="26sp"
            android:text="@string/sign_up"
            android:fontFamily="@font/jetbrainsmono"
            android:layout_marginTop="36dp"
            android:layout_marginStart="48dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_txt"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:text="Please enter valid details."
            android:fontFamily="@font/seg_ui_semibold"
            android:textColor="@color/primary_text_light"/>

        <LinearLayout
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/username"
                android:autofillHints="text"
                android:textColorHint="#8a8a8a"
                android:drawableEnd="@drawable/person"
                android:hint="@string/username"
                android:textColor="@color/text_for_inputs"
                android:paddingLeft="26dp"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:paddingRight="26dp"
                android:inputType="text"
                android:fontFamily="@font/jetbrainsmono"
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"

                >


            </EditText>
            <EditText
                android:id="@+id/email"
                android:autofillHints="emailAddress"
                android:textColorHint="#8a8a8a"
                android:drawableEnd="@drawable/mail"
                android:hint="@string/someone_gmail_com"
                android:textColor="@color/text_for_inputs"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/jetbrainsmono"
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"/>
            <EditText
                android:id="@+id/password"
                android:autofillHints="password"
                android:textColorHint="#8a8a8a"
                android:drawableEnd="@drawable/lock"
                android:hint="@string/password"
                android:textColor="@color/text_for_inputs"
                android:paddingLeft="26dp"
                android:layout_marginTop="24dp"
                android:paddingRight="26dp"
                android:inputType="textPassword"
                android:fontFamily="@font/jetbrainsmono"
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="12dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp">
                <Button
                    android:id="@+id/signUpButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/secondary_text"
                    android:padding="17dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="-50dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/jetbrainsmono"
                    android:backgroundTint="@color/button_clr"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/welcome"
            android:src="@drawable/google"
            android:background="@drawable/rounded_box"
            android:backgroundTint="@color/primary_bg_light"
            android:layout_below="@id/txt"
            android:layout_marginStart="180dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            >

        </ImageView>
        <LinearLayout
            android:layout_marginBottom="26dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_light"
                android:textSize="15sp"
                android:text="@string/already_have_an_account"
                android:fontFamily="@font/seg_ui_semibold"
                android:layout_marginStart="12dp" />
            <TextView
                android:id="@+id/backtolog"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_clr"
                android:textSize="20sp"
                android:text="@string/login1"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>